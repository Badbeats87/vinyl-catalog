# Database
DATABASE_URL="postgresql://user:password@localhost:5432/vinyl_catalog"

# Server
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Authentication (Development - tokens stored in memory)
# In production, implement proper JWT with RS256 or use OAuth2 provider
JWT_SECRET=your_jwt_secret_key_here

# Discogs API
DISCOGS_API_TOKEN=your_discogs_token_here

# eBay API (for later phases)
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret

# PayPal Integration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
PAYPAL_API_BASE=https://api-m.sandbox.paypal.com

# Email Service (SendGrid, AWS SES, or similar)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@example.com

# Shipping (for later phases)
SHIPPO_API_TOKEN=your_shippo_token
